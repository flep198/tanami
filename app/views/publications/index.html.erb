<p id="notice"><%= notice %></p>

<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
  <h1>Publications</h1>

  <table>
    <thead>
      <tr>
        <th>Authors</th>
        <th>Title</th>
        <th>Reference</th>
        <th>Ads link</th>
        <th>Arxiv link</th>
        <th>Pdf link</th>
        <% if current_user.delete_permission %>
        <th colspan="2"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @publications.each do |publication| %>
        <tr>
          <td><%= publication.authors %></td>
          <td><%= publication.title %></td>
          <td><%= publication.reference %></td>
          <td><%= publication.ads_link %></td>
          <td><%= publication.arxiv_link %></td>
          <td><%= publication.pdf_link %></td>
          <% if current_user.delete_permission %>
            <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
            <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Publication', new_publication_path %>
</div>
</div>
