<style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif}
.w3-bar,h1,button {font-family: "Montserrat", sans-serif}
.fa-anchor,.fa-coffee {font-size:200px}
</style>
</head>
<body>

<!-- Navbar -->
<div class="w3-top">
  <div class="w3-bar w3-red w3-card w3-left-align w3-large">
    <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
    <a href="#" class="w3-bar-item w3-button w3-padding-large w3-white">Home</a>
    <%= link_to 'Sources', sources_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <%= link_to 'Sessions', sessions_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <%= link_to 'Data', datasets_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <%= link_to 'Bands', bands_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
    <%= link_to 'Publications', publications_path, class: "w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" %>
  </div>

  <!-- Navbar on small screens -->
  <div id="navDemo" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium w3-large">
    <%= link_to 'Sources', sources_path, class: "w3-bar-item w3-button w3-padding-large" %>
    <%= link_to 'Sessions', sessions_path, class: "w3-bar-item w3-button w3-padding-large" %>
    <%= link_to 'Data', datasets_path, class: "w3-bar-item w3-button w3-padding-large" %>
    <%= link_to 'Bands', bands_path, class: "w3-bar-item w3-button w3-padding-large" %>
    <%= link_to 'Publications', publications_path, class: "w3-bar-item w3-button w3-padding-large" %>
  </div>
</div>


    <%= yield %>


  </body>
</html>
