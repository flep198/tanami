<%= form_with(model: dataset) do |form| %>
  <% if dataset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dataset.errors.count, "error") %> prohibited this dataset from being saved:</h2>

      <ul>
        <% dataset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :uvf %>
    <%= form.file_field :uvf %>
  </div>

  <div class="field">
    <%= form.label :rms %>
    <%= form.text_field :rms %>
  </div>

  <div class="field">
    <%= form.label :lowest_contour %>
    <%= form.text_field :lowest_contour %>
  </div>

  <div class="field">
    <%= form.label :peak_flux %>
    <%= form.text_field :peak_flux %>
  </div>

  <div class="field">
    <%= form.label :beam_maj %>
    <%= form.text_field :beam_maj %>
  </div>

  <div class="field">
    <%= form.label :beam_min %>
    <%= form.text_field :beam_min %>
  </div>

  <div class="field">
    <%= form.label :beam_pos %>
    <%= form.text_field :beam_pos %>
  </div>

  <div class="field">
    <%= form.label :source_id, class: "form-label" %>
    <%= collection_select(:dataset,:source_id,Source.order('be1950name ASC'), :id, :be1950name, {},{ :multiple => false, class: "form-select"}) %>
  </div>

   <div class="field">
    <%= form.label :band_id, class: "form-label" %>
    <%= collection_select(:dataset,:band_id,Band.order('name ASC'), :id, :name, {},{ :multiple => false, class: "form-select"}) %>
  </div>

   <div class="field">
    <%= form.label :session_id, class: "form-label" %>
    <%= collection_select(:dataset,:session_id,Session.order('data ASC'), :id, :data, {},{ :multiple => false, class: "form-select"}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
