<%= form_with(model: dataset) do |form| %>
  <% if dataset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dataset.errors.count, "error") %> prohibited this dataset from being saved:</h2>

      <ul>
        <% dataset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w3-row">

    <div class="w3-col w3-container" style="width:20%">
      <%= form.label :image, "Image (.png, .jpg, .gif)" %>
      <%= form.file_field :image, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:20%">
      <%= form.label :uvf, "uvf File" %>
      <%= form.file_field :uvf, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:12.5%">
      <%= form.label :ra_min, "RA min"%>
      <%= form.text_field :ra_min, class:"w3-input w3-border w3-round"%>
    </div>

    <div class="w3-col w3-container" style="width:12.5%">
      <%= form.label :ra_max, "RA max"%>
      <%= form.text_field :ra_max, class:"w3-input w3-border w3-round"%>
    </div>

    <div class="w3-col w3-container" style="width:12.5%">
      <%= form.label :dec_min, "DEC min"%>
      <%= form.text_field :dec_min, class:"w3-input w3-border w3-round"%>
    </div>

    <div class="w3-col w3-container" style="width:12.5%">
      <%= form.label :dec_max, "DEC max"%>
      <%= form.text_field :dec_max, class:"w3-input w3-border w3-round"%>
    </div>
  </div>
  <div class="w3-row">

    <div class="w3-col w3-container" style="width:30%">
      <%= form.label :source_id, class: "form-label" %>
      <%= collection_select(:dataset,:source_id,Source.order('be1950name ASC'), :id, :be1950name, {},{ :multiple => false, class: "w3-select w3-border w3-round"}) %>
    </div>

     <div class="w3-col w3-container" style="width:30%">
      <%= form.label :band_id, class: "form-label" %>
      <%= collection_select(:dataset,:band_id,Band.order('name ASC'), :id, :name, {},{ :multiple => false, class: "w3-select w3-border w3-round"}) %>
    </div>

     <div class="w3-col w3-container" style="width:30%">
      <%= form.label :session_id, class: "form-label" %>
      <%= collection_select(:dataset,:session_id,Session.order('data ASC'), :id, :data, {},{ :multiple => false, class: "w3-select w3-border w3-round"}) %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :rms %>
      <%= form.text_field :rms, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :lowest_contour %>
      <%= form.text_field :lowest_contour, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :peak_flux %>
      <%= form.text_field :peak_flux, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :beam_maj %>
      <%= form.text_field :beam_maj, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :beam_min %>
      <%= form.text_field :beam_min, class:"w3-input w3-border w3-round" %>
    </div>

    <div class="w3-col w3-container" style="width:15%">
      <%= form.label :beam_pos %>
      <%= form.text_field :beam_pos, class:"w3-input w3-border w3-round" %>
    </div>

  </div>
  <p></p>
  <div class="w3-row">
    <div class="w3-col w3-container" style="width:15%">
      <%= form.check_box :public, class:"w3-check w3-border w3-round" %> Public?
    </div>
  </div>
  <p></p>
  <div class="w3-row">
    <div class="w3-col w3-container" style="width:30%">
      <%= form.submit :Submit, class:"w3-btn w3-blue" %>
    </div>
  </div>
<% end %>
