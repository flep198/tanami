<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
<p>
  <strong>Be1950name:</strong>
  <%= @source.be1950name %>
</p>

<p>
  <strong>Alt name:</strong>
  <%= @source.alt_name %>
</p>

<p>
  <strong>Ra:</strong>
  <%= @source.ra %>
</p>

<p>
  <strong>Decl:</strong>
  <%= @source.decl %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @source.comment %>
</p>

<p>
  <strong>Atca link:</strong>
  <%= @source.atca_link %>
</p>

<p>
  <strong>Source Type:</strong>
  <%= @source.source_type %>
</p>

<p>
  <strong>Redshift:</strong>
  <%= @source.redshift %>
</p>

<%= link_to 'Edit', edit_source_path(@source) %> |
<%= link_to 'Back', sources_path %>



<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Uvf</th>
      <th>Rms</th>
      <th>Lowest contour</th>
      <th>Peak flux</th>
      <th>Beam maj</th>
      <th>Beam min</th>
      <th>Beam pos</th>
      <th>Source</th>
      <th>Band</th>
      <th>Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @source.datasets.each do |dataset| %>
      <tr>
        <td><%= image_tag(dataset.image,width:200) %></td>
        <td><%= link_to 'uvf Download', dataset.uvf %></td>
        <td><%= dataset.rms %></td>
        <td><%= dataset.lowest_contour %></td>
        <td><%= dataset.peak_flux %></td>
        <td><%= dataset.beam_maj %></td>
        <td><%= dataset.beam_min %></td>
        <td><%= dataset.beam_pos %></td>
        <td><%= dataset.source.be1950name %></td>
        <td><%= dataset.band.name %></td>
        <td><%= dataset.session.data %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
</div>